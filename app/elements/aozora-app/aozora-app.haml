%dom-module#aozora-app
  %link{rel: 'import', type: 'css', href: 'aozora-app.css'}
  %template

    %aozora-resources#resources
    %aozora-story#story

    %aozora-video#video.hide
    %aozora-loading-screen#loadingScreen

    %paper-drawer-panel(force-narrow disable-swipe disable-edge-swipe)
      %aozora-drawer#drawer(drawer)
      %div(main)
        %aozora-background#background

        .conversation-and-tachies
          %aozora-conversation-box#conversationBox
          %aozora-tachies#tachies

        %aozora-bgm#bgm

        %aozora-opening-screen#openingScreen

        %aozora-topbar#topBar.hide

%script{src: 'aozora-app.js'}
