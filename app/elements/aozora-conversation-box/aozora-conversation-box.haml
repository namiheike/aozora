%dom-module#aozora-conversation-box
  %link{rel: 'import', type: 'css', href: 'aozora-conversation-box.css'}
  %template
    %template{is: 'dom-if', if: '{{node.typeIsLine}}'}
      .node.line
        %p.role {{ roleNameOfLine(node) }}
        %p {{ node.text }}

    %template{is: 'dom-if', if: '{{node.typeIsNarrate}}'}
      .node.narrate
        %p {{ node.text }}

    %template{is: 'dom-if', if: '{{node.typeIsOptions}}'}
      .node.options
        %template{is: 'dom-repeat', items: '[[node.options]]', as: 'option'}
          .option
            / TODO ripple
            %p{'on-tap' => 'onTapOnOption'} {{ option.text }}

%script{src: 'aozora-conversation-box.js'}
