%dom-module#aozora-conversation-box
  %template
    @@include('./aozora-conversation-box.css')

    %template{is: 'dom-if', if: '{{nodeTypeIsLine}}'}
      .node.line
        %p.role {{ _roleNameOfLine(node) }}
        %aozora-sentence{sentence: '{{node.text}}'}

    %template{is: 'dom-if', if: '{{nodeTypeIsNarrate}}'}
      .node.narrate
        %p {{ node.text }}

    %template{is: 'dom-if', if: '{{nodeTypeIsOptions}}'}
      .node.options
        %template{is: 'dom-repeat', items: '{{node.options}}', as: 'option'}
          .option
            / TODO ripple
            %p{'on-tap' => '_onTapOnOption'} {{ option.text }}

%script{src: 'aozora-conversation-box.js'}
