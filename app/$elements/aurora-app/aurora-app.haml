%dom-module#aurora-app
  %template
    @@include('./aurora-app.css')

    %aurora-loader#loader

    %neon-animated-pages#screens.flex{selectable: '.screen', 'attr-for-selected': 'screen-name', selected: 'loading', 'entry-animation': 'fade-in-animation', 'exit-animation': 'fade-out-animation'}
      %aurora-loading-screen#loadingScreen.screen{'screen-name': 'loading'}
      %aurora-opening-screen#openingScreen.screen{'screen-name': 'opening'}
      %aurora-video#video.screen{'screen-name': 'video'}
      %aurora-story-screen#storyScreen.screen.flex{'screen-name': 'story'}

    %aurora-bgm#bgm

%script{src: 'aurora-app.js'}
